<Window x:Class="MechwarriorVRLauncher.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Clean Install"
        Height="450"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Icon="assets/Logo.png"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Warning Message -->
        <TextBlock Grid.Row="0"
                   Text="Clean Install will DELETE the following directories:"
                   FontWeight="SemiBold"
                   FontSize="14"
                   Margin="0,0,0,15"
                   TextWrapping="Wrap"/>

        <!-- Scrollable List of Items to Delete -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                Margin="0,0,0,20"
                Background="{DynamicResource SurfaceBrush}">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <TextBlock x:Name="ItemsTextBlock"
                           FontFamily="Consolas"
                           FontSize="12"
                           Padding="10"
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Click="CancelButton_Click"
                    MinWidth="80"
                    Margin="0,0,10,0"
                    Padding="10,5"/>
            <Button x:Name="ContinueButton"
                    Content="Continue"
                    Click="ContinueButton_Click"
                    MinWidth="80"
                    Padding="10,5"
                    IsDefault="False"/>
        </StackPanel>
    </Grid>
</Window>
